<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Gig</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <h1>Update Gig via AI</h1>
      <form id="gig-form">
        <label for="gig-message">Describe the new gig:</label><br />
        <textarea
          id="gig-message"
          rows="4"
          placeholder="e.g., Add May 20 at The Echo in LA at 8pm."
        ></textarea
        ><br />
        <button type="submit">Send to AI</button>
      </form>
      <div id="result"></div>
    </main>

    <script>
      document
        .getElementById("update-form")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          const message = document.getElementById("gig-message").value;
          const resultBox = document.getElementById("result");

          resultBox.innerText = "⏳ Sending to AI...";

          try {
            const res = await fetch(
              "https://up-gigs-production.up.railway.app/api/parse-and-add",
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                  Authorization: "Bearer gigs2025tokenXYZ",
                },
                body: JSON.stringify({ message }),
              }
            );

            const result = await res.json();

            if (res.ok) {
              resultBox.innerText = `✅ Gig added: ${JSON.stringify(
                result.gig
              )}`;
            } else {
              resultBox.innerText = `❌ Error: ${
                result.error || "Unknown error"
              }`;
            }
          } catch (err) {
            resultBox.innerText = `❌ Network error: ${err.message}`;
          }
        });
    </script>
  </body>
</html>
